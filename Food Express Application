            card.addEventListener('click', () => {
                showMenuItems(restaurant);
            });
            
            restaurantGrid.appendChild(card);
        });

        // Show menu items for a restaurant
        function showMenuItems(restaurant) {
            // In a real app, this would open a menu modal or navigate to a menu page
            alert(`Viewing menu for ${restaurant.name}. In a real app, this would show the full menu.`);
            
            // For demo purposes, add the first item to cart
            addToCart(restaurant.items[0]);
        }

        // Add item to cart
        function addToCart(item) {
            const existingItem = cart.find(cartItem => cartItem.id === item.id);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({...item, quantity: 1});
            }
            
            updateCart();
        }

        // Update cart UI
        function updateCart() {
            // Clear cart items
            cartItems.innerHTML = '';
            
            // Add items to cart
            let total = 0;
            cart.forEach(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                const cartItem = document.createElement('div');
                cartItem.className = 'cart-item';
                cartItem.innerHTML = `
                    <div class="item-details">
                        <h4>${item.name}</h4>
                        <div class="item-price">₹${item.price.toFixed(2)}</div>
                    </div>
                    <div class="item-quantity">
                        <button class="quantity-btn decrease" data-id="${item.id}">-</button>
                        <span class="quantity">${item.quantity}</span>
                        <button class="quantity-btn increase" data-id="${item.id}">+</button>
                    </div>
                `;
                
                cartItems.appendChild(cartItem);
            });
            
            // Update total and count
            cartTotal.textContent = `₹${total.toFixed(2)}`;
            cartCount.textContent = cart.reduce((sum, item) => sum + item.quantity, 0);
            
            // Add event listeners to quantity buttons
            document.querySelectorAll('.increase').forEach(button => {
                button.addEventListener('click', (e) => {
                    const id = parseInt(e.target.getAttribute('data-id'));
                    const item = cart.find(item => item.id === id);
                    item.quantity += 1;
                    updateCart();
                });
            });
            
            document.querySelectorAll('.decrease').forEach(button => {
                button.addEventListener('click', (e) => {
                    const id = parseInt(e.target.getAttribute('data-id'));
                    const item = cart.find(item => item.id === id);
                    
                    if (item.quantity > 1) {
                        item.quantity -= 1;
                    } else {
                        cart = cart.filter(item => item.id !== id);
                    }
                    
                    updateCart();
                });
            });
        }

        // Toggle cart modal
        cartIcon.addEventListener('click', () => {
            cartModal.classList.add('open');
        });

        closeCart.addEventListener('click', () => {
            cartModal.classList.remove('open');
        });

        // Toggle location modal
        locationSelector.addEventListener('click', () => {
            locationModal.classList.add('open');
        });

        closeLocation.addEventListener('click', () => {
            locationModal.classList.remove('open');
        });

        // Handle city selection
        cityButtons.forEach(button => {
            button.addEventListener('click', () => {
                const city = button.getAttribute('data-city');
                
                // Remove active class from all buttons
                cityButtons.forEach(btn => btn.classList.remove('active'));
                
                // Add active class to clicked button
                button.classList.add('active');
                
                // Update location text after a short delay
                setTimeout(() => {
                    document.querySelector('.location-selector span').textContent = `${city}`;
                    locationModal.classList.remove('open');
                    
                    // Show confirmation message
                    alert(`Location changed to ${city}. In a real app, this would update restaurant listings.`);
                }, 500);
            });
        });

        // Initialize the page
        updateCart();
    </script>
</body>
</html>
